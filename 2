#include <iostream>

bool binarySearch(const int array[], int size, int key) {
    int left = 0;
    int right = size - 1;

    while (left <= right) {
        int mid = left + (right - left) / 2;

        if (array[mid] == key) {
            return true;
        }

        if (array[mid] < key) {
            left = mid + 1;
        } else {
            right = mid - 1;
        }
    }

    return false;
}

int main() {
    int arr[] = {10, 20, 30, 40, 50};
    int size = sizeof(arr) / sizeof(arr[0]);
    int key = 30;

    if (binarySearch(arr, size, key)) {
        std::cout << "Елемент знайдено в масиві.\n";
    } else {
        std::cout << "Елемент не знайдено в масиві.\n";
    }

    return 0;
}
