#include <iostream>

bool linearSearch(const int array[], int size, int key) {
    for (int i = 0; i < size; ++i) {
        if (array[i] == key) {
            return true;
        }
    }
    return false;
}

int main() {
    int arr[] = {10, 20, 30, 40, 50};
    int size = sizeof(arr) / sizeof(arr[0]);
    int key = 30;

    if (linearSearch(arr, size, key)) {
        std::cout << "Елемент знайдено в масиві.\n";
    } else {
        std::cout << "Елемент не знайдено в масиві.\n";
    }

    return 0;
}
